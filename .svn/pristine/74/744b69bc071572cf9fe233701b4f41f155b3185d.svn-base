{extend name="base/base" /}
{block name="css"}
{css href="__common__/admin/css/goods/form.css" /}
{css href="__plugin__/umeditor/themes/default/css/umeditor.min.css"/}
{/block}
{block name="content"}

<div class="page-content">
    <div class="page-header">
        <h1>
            活动管理
            <small>
                <i class="icon-double-angle-right"></i>
                {notempty name='type'}
                {switch name='type'}
                {case value='add'}添加{/case}
                {case value='edit'}编辑{/case}
                {default /}查看
                {/switch}
                {/notempty}
            </small>
        </h1>
    </div><!-- /.page-header -->
<div class="row">
    <div class="col-xs-12">
       <!-- PAGE CONTENT BEGINS -->
        <form class="form-horizontal" role="form" id="form_content">


    <div class="row">
        <div class="col-xs-12">
            <!-- PAGE CONTENT BEGINS -->
            <form class="form-horizontal" role="form" id="form_content">

                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right">活动名称</label>
                    <div class="col-sm-6">
                        <input type="text" placeholder="请输入活动名称" class="col-xs-10 col-sm-5" name="name"                                {switch name='type'}
                        {case value='add'}{/case}
                        {case value='edit|see'}value="{$act_data.name}{/case}
                        {default /}
                        {/switch} "/>
                    </div>
                </div>
                <div class="space-4"></div>

                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right">活动描述</label>
                    <div class="col-sm-6">
                        <input type="text" placeholder="请输入活动描述" class="col-xs-10 col-sm-5" name="desc"
                        {switch name='type'}
                        {case value='add'}{/case}
                        {case value='edit|see'}value="{$act_data.desc}{/case}
                        {default /}
                        {/switch}  "/>
                    </div>
                </div>
                <div class="space-4"></div>

                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right">活动链接</label>
                    <div class="col-sm-6">
                        <input type="text" placeholder="请输入活动链接" class="col-xs-10 col-sm-5" name="link"
                        {switch name='type'}
                        {case value='add'}{/case}
                        {case value='edit|see'}value="{$act_data.link}{/case}
                        {default /}
                        {/switch}  "/>
                    </div>
                </div>
                <div class="space-4"></div>


                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right">图片地址</label>
                    <div class="col-sm-6">
                        <input type="text" placeholder="请输入图片地址" class="col-xs-10 col-sm-5" name="src"
                        {switch name='type'}
                        {case value='add'}{/case}
                        {case value='edit|see'}value="{$act_data.src}{/case}
                        {default /}
                        {/switch}  "/>
                    </div>
                </div>
                <div class="space-4"></div>

                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right">显示标志位</label>
                    <div class="col-sm-6">
                        <input type="text" placeholder="1（显示）0（不显示）" class="col-xs-10 col-sm-5" name="flag"
                        {switch name='type'}
                        {case value='add'}{/case}
                        {case value='edit|see'}value="{$act_data.flag}{/case}
                        {default /}
                        {/switch}  "/>
                    </div>
                </div>
                <div class="space-4"></div>

                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right">排列序号</label>
                    <div class="col-sm-6">
                        <input type="text" placeholder="序号大的排名靠前" class="col-xs-10 col-sm-5" name="sort"
                        {switch name='type'}
                        {case value='add'}{/case}
                        {case value='edit|see'}value="{$act_data.sort}{/case}
                        {default /}
                        {/switch}  "/>
                    </div>
                </div>
                <div class="space-4"></div>

                <div class="space-4"></div>

                <!--操作按钮-->
                <div class="clearfix form-actions">
                    <div class="col-md-offset-3 col-md-9">
                        {notempty name='type'}
                        {switch name='type'}
                        {case value='add'}
                        <button class="btn btn-info submit_btn" type="button">
                            <i class="icon-ok bigger-110"></i>
                            提交表单
                        </button>
                        &nbsp; &nbsp; &nbsp;
                        <button class="btn" type="reset">
                            <i class="icon-undo bigger-110"></i>
                            重置
                        </button>
                        &nbsp; &nbsp; &nbsp;
                        <button class="btn btn-default close_page" type="button">
                            <i class="fa fa-times bigger-110"></i>
                            关闭页面
                        </button>
                        {/case}
                        {case value='edit'}
                        <button class="btn btn-info submit_btn" type="button">
                            <i class="icon-ok bigger-110"></i>
                            保存内容
                        </button>
                        <button class="btn btn-default close_page" type="button">
                            <i class="fa fa-times bigger-110"></i>
                            关闭页面
                        </button>
                        {/case}
                        {default /}
                        {/switch}
                        {/notempty}
                    </div>
                </div>
                <input type="hidden" name="id" value="{$act_data.id|default=''}">
            </form>
        </div><!-- /.row -->
    </div><!-- /.page-content -->
</div>

<input type="hidden" id="submit_url" value="{:U('update')}">
<input type="hidden" id="root_url" value="{:U('index')}">
<input type="hidden" id="type" value="{$type|default='add'}">
{/block}

{block name="js"}
{js href='__common__/admin/js/activity/form.js' /}
{js href='__plugin__/umeditor/umeditor.config.js' /}
{js href='__plugin__/umeditor/umeditor.min.js' /}
{js href='__plugin__/umeditor/lang/zh-cn/zh-cn.js' /}
{/block}