{extend name='base/base' /}
{block name='content'}
<div class="breadcrumbs" id="breadcrumbs">
    <script type="text/javascript">
        try {
            ace.settings.check('breadcrumbs', 'fixed')
        } catch (e) {
        }
    </script>

    <ul class="breadcrumb">
        <li>
            <i class="icon-home home-icon"></i>
            <a href="javascript:">后台管理</a>
        </li>
        <li class="active">菜单管理</li>
    </ul><!-- .breadcrumb -->


</div>

<div class="page-content">
    <div class="page-header">
        <form id="form_condition" class="form-search form-inline" role="form">
            <div class="form-group">
                <label class="sr-only"></label>
                <select class="form-control fc-select" id="form-field-select-1" name="field" style="min-width: 120px;width:20%;">
                    <option value="name">角色名称</option>
                </select>
            </div>
            <div class="form-group" style="width:30%;">
                <label class="sr-only"></label>
                <input class="form-control search-query " style="min-width: 120px;width:100%" placeholder="请输入" type="text" name="keywords">
            </div>
            <div class="form-group">
                <!--<span class="input-group-btn form-control">-->
                    <button type="button" class="btn btn-purple btn-sm search_btn">
                        搜索
                        <i class="icon-search icon-on-right bigger-110"></i>
                    </button>
                    <a href="{:U('exec',array('type'=>'add'))}" target="_blank" class="btn btn-success btn-sm">
                        <i class="icon-plus icon-on-right bigger-110"></i>
                        新增
                    </a>
                <!--</span>-->
            </div>
        </form>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <!-- PAGE CONTENT BEGINS -->
            <div class="row">
                <div class="col-xs-12">
                    <div class="table-responsive">
                        <div id="form_content" data-url="{:U('show_list')}"></div>
                    </div><!-- /.table-responsive -->
                </div><!-- /span -->
            </div><!-- /row -->
        </div><!-- /.col -->
    </div><!-- /.row -->
</div><!-- /.page-content -->

<input type="hidden" id="del_url" value="{:U('del')}">

{/block}

{block name="js"}
{js href='__common__/admin/js/order/index.js' /}
{/block}