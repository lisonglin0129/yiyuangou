<table id="sample-table-1" class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
        <th class="center">
            <label>
                <input type="checkbox" class="ace select-all"/>
                <span class="lbl"></span>
            </label>
        </th>
        <th>消息标题</th>
    </tr>
    </thead>
    <tbody>
    {notempty name="list"}
    {volist name="list" id="vo"}
    <tr><td class="center">
        <label>
            <input type="checkbox" class="ace check" {if condition="!empty($mids) AND in_array($vo['id'],$mids) eq true"}checked{/if} value="{$vo.id|default=0}"/>
            <span class="lbl"></span>
        </label>
    </td><td>{$vo.title|default=''}</td></tr>
   {/volist}
    {else /}
    <tr align="center"><td colspan="2"></td></tr>
    {/notempty}
    </tbody>
</table>
<div class="page">
    {$pages|default=''}
</div>
