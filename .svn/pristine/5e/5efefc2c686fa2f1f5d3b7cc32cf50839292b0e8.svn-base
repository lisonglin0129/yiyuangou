{extend name="base/base" /}
{block name="content"}
<div class="page-content">
    <div class="page-header">
        <h1>
            菜单
            <small>
                <i class="icon-double-angle-right"></i>
                {notempty name='type'}
                {switch name='type'}
                {case value='add'}添加{/case}
                {case value='edit'}编辑{/case}
                {default /}查看
                {/switch}
                {/notempty}
            </small>
        </h1>
    </div><!-- /.page-header -->

    <div class="row">
        <div class="col-xs-12">
            <!-- PAGE CONTENT BEGINS -->
            <form class="form-horizontal" role="form" id="form_content">
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right"> 状态 </label>
                    <div class="col-sm-6">
                        <select class="col-xs-10 col-sm-5" data-placeholder="请选择" name="status">
                            <option value="1" {if condition="!empty($info['status']) AND $info['status'] eq '1'"}selected="selected"{/if} >正常</option>
                            <option value="2" {if condition="!empty($info['status']) AND $info['status'] eq '-2'"}selected="selected"{/if} >禁用</option>
                        </select>
                        <span class="help-inline col-xs-12 col-sm-7">
						    <span class="middle">禁用的菜单将不会显示</span>
                        </span>
                    </div>
                </div>
                <div class="space-4"></div>

                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right"> 名称 </label>
                    <div class="col-sm-6">
                        <input type="text" placeholder="请输入" class="col-xs-10 col-sm-5" name="title" value="{$info.title|default=''}"/>
                        <span class="help-inline col-xs-12 col-sm-7">
						    <span class="middle">菜单的名称</span>
                        </span>
                    </div>
                </div>
                <div class="space-4"></div>

                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right"> 上级菜单 </label>
                    <div class="col-sm-6">

                        <select class="col-xs-10 col-sm-5" data-placeholder="请选择" name="pid">
                            {volist name='menus' id='vo'}
                            <option value="{$vo.id|default=''}"
                                    {if condition="!empty(I('pid',''))" }
                                        {if condition="(I('pid') eq $vo['id'])"}selected="selected"{/if}
                                    {/if}
                                    {if condition="!empty($info['pid'])" }
                                    {if condition="$info['pid'] eq $vo['id']"}selected="selected"{/if}
                                    {/if}
                            >{$vo.title_show|default=''}</option>
                            {/volist}
                        </select>
                        <span class="help-inline col-xs-12 col-sm-7">
						    <span class="middle">选择上级菜单</span>
                        </span>
                    </div>
                </div>
                <div class="space-4"></div>

                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right"> 排序号 </label>
                    <div class="col-sm-6">
                        <input type="text" placeholder="请输入" class="col-xs-10 col-sm-5" name="sort" value="{$info.sort|default='100'}"/>
                        <span class="help-inline col-xs-12 col-sm-7">
						    <span class="middle">菜单的排序号</span>
                        </span>
                    </div>
                </div>
                <div class="space-4"></div>

                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right"> 图标 </label>
                    <div class="col-sm-6">
                        <input type="text" placeholder="请输入" class="col-xs-10 col-sm-5" name="ico" value="{$info.ico|default='circle'}"/>
                        <span class="help-inline col-xs-12 col-sm-7">
						    <span class="middle">请点 <a href="http://www.thinkcmf.com/font/what_is_new" target="_blank">这里</a> 查看详细代码</span>
                        </span>
                    </div>
                </div>
                <div class="space-4"></div>


                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right"> URL地址 </label>
                    <div class="col-sm-6">
                        <input type="text" placeholder="请输入" class="col-xs-10 col-sm-5" name="url" value="{$info.url|default=''}"/>
                        <span class="help-inline col-xs-12 col-sm-7">
						    <span class="middle">可以输入内部地址或http://开头的外部地址</span>
                        </span>
                    </div>
                </div>
                <div class="space-4"></div>

                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right"> 打开方式 </label>
                    <div class="col-sm-6">

                        <select class="col-xs-10 col-sm-5" data-placeholder="请选择" name="target">

                            <option value="self" {if condition="!empty($info['target']) AND $info['target'] eq 'self'"}selected="selected"{/if}>当前页</option>
                            <option value="blank" {if condition="!empty($info['target']) AND $info['target'] eq 'blank'"}selected="selected"{/if}>新页面</option>
                        </select>
                        <span class="help-inline col-xs-12 col-sm-7">
						    <span class="middle">页面打开方式</span>
                        </span>
                    </div>
                </div>
                <div class="space-4"></div>
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right"> 超级管理员是否可见 </label>
                    <div class="col-sm-6">

                        <select class="col-xs-10 col-sm-5" data-placeholder="请选择" name="is_admin">

                            <option value="1" {if condition="!empty($info['is_admin']) AND $info['is_admin'] eq '1'"}selected="selected"{/if}>可见</option>
                            <option value="2" {if condition="!empty($info['is_admin']) AND $info['is_admin'] eq '2'"}selected="selected"{/if}>不可见</option>
                        </select>
                        <span class="help-inline col-xs-12 col-sm-7">
						    <span class="middle">超级管理员是否可见</span>
                        </span>
                    </div>
                </div>
                <div class="space-4"></div>

                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right"> 参数 </label>
                    <div class="col-sm-6">
                        <input type="text" placeholder="请输入" class="col-xs-10 col-sm-5" name="param" value="{$info.param|default=''}"/>
                        <span class="help-inline col-xs-12 col-sm-7">
						    <span class="middle">附加的get参数</span>
                        </span>
                    </div>
                </div>
                <div class="space-4"></div>

                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right"> 提示 </label>
                    <div class="col-sm-6">
                        <input type="text" placeholder="请输入" class="col-xs-10 col-sm-5" name="tip" value="{$info.tip|default=''}"/>
                        <span class="help-inline col-xs-12 col-sm-7">
						    <span class="middle">鼠标放上菜单上的提示</span>
                        </span>
                    </div>
                </div>
                <div class="space-4"></div>

                <!--操作按钮-->
                <div class="clearfix form-actions">
                    <div class="col-md-offset-3 col-md-9">
                        {notempty name='type'}
                        {switch name='type'}
                        {case value='add'}
                        <button class="btn btn-info submit_btn" type="button">
                            <i class="icon-ok bigger-110"></i>
                            提交表单
                        </button>
                        &nbsp; &nbsp; &nbsp;
                        <button class="btn" type="reset">
                            <i class="icon-undo bigger-110"></i>
                            重置
                        </button>
                        &nbsp; &nbsp; &nbsp;
                        <button class="btn btn-default close_page" type="button">
                            <i class="fa fa-times bigger-110"></i>
                            关闭页面
                        </button>
                        {/case}
                        {case value='edit'}
                        <button class="btn btn-info submit_btn" type="button">
                            <i class="icon-ok bigger-110"></i>
                            保存内容
                        </button>
                        <button class="btn btn-default close_page" type="button">
                            <i class="fa fa-times bigger-110"></i>
                            关闭页面
                        </button>
                        {/case}
                        {default /}
                        {/switch}
                        {/notempty}
                    </div>
                </div>
                <input type="hidden" name="id" value="{$info.id|default=''}">
            </form>
        </div><!-- /.row -->
    </div><!-- /.page-content -->
</div>
<input type="hidden" id="submit_url" value="{:U('update')}">
<input type="hidden" id="root_url" value="{:U('index')}">
{/block}
{block name="js"}
{js href='__common__/admin/js/menu/form.js' /}
{/block}