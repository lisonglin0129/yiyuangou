.news_home{
    box-shadow:none; 
    width: 710px;
    padding: 0px 20px;
    height: 80px;
    background-color:transparent; 
}

.n-logo-img{
    float: left;
    margin-top: 14px;
    width: 150px;
    height: 50px;
    overflow: hidden;
    background-color: rgba(204, 204, 204, 0.46);
}
.n-input{
    float: left;
    width: 280px;
    margin: 9px 0px 0px 17px;
    padding-left: 110px;
    height: 60px;
    border:none;
    font-size: 25px;
    color: #b2b2b2;
    background-color: #fff;
    border-radius: 30px;
    font-family: Microsoft YaHei;
}
.n-h-icon{
    position: absolute;
    z-index: 1001;
    left: 220px;
    font-size: 50px;
    color: #b2b2b2;
}
.n-h-a{
    float: right;
    font-size: 28px;
    color: #fff;
}


.swiper-container {
        width: 100%;
        height: 100%;    
}
.news_swiper-container{
    width: 750px;
    height: 370px;
}
.swiper-slide{
        text-align: center;
        font-size: 18px;      
}
.news_img{
    width: 100%;
    height: 100%;
    background: url(../img/home/new_banner.png) no-repeat 0px 0px;
    background-size: 100% 100%;
}
.swiper-pagination-bullet{
    width: 20px;
    height: 20px;
    background-color: #000;
    opacity: 0.3;
}
.swiper-pagination-bullet-active{
    background-color: #fff;
    opacity: 1;
}



.n-add-up{
    margin: 0px;
    width: 710px;
    padding: 0px 20px;
    height: 80px;
    line-height: 80px;
    font-size: 24px;
    color: #ed383d;
    font-weight: 400;
    background-color: #fff;
}
.n-up-icon{
    float: left;
    margin-right: 15px;
    font-size: 35px;
    color: #ed383d;
    margin-bottom: 15px;
}
.n-menus{

    width: 750px;
    height: 250px;
    background-color: #fff;
}
.n-menus-a{
    display: block;
    margin: 33px 0px 0px 62px;
    float: left;
    width: 110px;
    height: 180px;
    font-size: 26px;
    line-height: 316px;
    color: #000;
    text-align: center;
     background:url(../img/home/n-menus.png) no-repeat -10px 0px; 
}
.n-menus-a:nth-child(2){
    background-position: -160px 4px;
}
.n-menus-a:nth-child(3){
    background-position: -313px 4px;
}
.n-menus-a:nth-child(4){
    background-position: -477px 4px;
}
.n-recommend{
    width: 750px;
    height: 95px;
    color: #874df7;
    font-size: 30px;
    line-height: 95px;
    letter-spacing:30px;
    text-align: center;
    background:url(../img/home/recommend.png) no-repeat 0px 0px;
}
.n-recommend-a{
    margin-left: 30px;
    overflow-y:hidden;
}