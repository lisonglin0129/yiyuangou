<table id="sample-table-1" class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
        <th class="center">
            <label>
                <input type="checkbox" class="ace"/>
                <span class="lbl"></span>
            </label>
        </th>
        <th style="text-align:left">显示名称</th>
        <!--<th>父级分类</th>-->
        <th>排序号</th>
        <th>所属分类</th>
        <!--<th>图标ID</th>-->
        <th>小图标url</th>
        <th>小图标样式扩展</th>
        <th>识别码</th>
        <!--<th>状态</th>-->
        <th>URL</th>
        <th>描述</th>
        <!--<th>总点击次数</th>-->
        <th>图片地址</th>
        <th>操作</th>
    </tr>
    </thead>
    <tbody>
    {volist name='son_cate_list' id='vo'}
    {if condition='!empty($vo["id"])'}
    <tr>
        <td class="center">

            <label>
                <input type="checkbox" class="ace"/>
                <span class="lbl"></span>
            </label>
        </td>
        <td class="hidden-480;"  style="text-align:left">{$vo.title_show|default=''}</td>
        <!--<td>{$vo.pid|default=''}</td>-->
        <td>{$vo.orders|default=''}</td>
        <td>{$vo.mid|default=''}</td>
        <td>{$vo.imgid|default=''}</td>
        <!--<td>{$vo.icon|default=''}</td>-->
        <td>{$vo.style|default=''}</td>
        <td>{$vo.code|default=''}</td>
        <!--<td>{$vo.status|default=''}</td>-->
        <td>{$vo.url|default=''}</td>
        <td>{$vo.desc|default=''}</td>
        <!--<td>{$vo.sumclick|default=''}</td>-->
        <td>{$vo.img_url|default=''}</td>
        <td>
            <div class="visible-md visible-lg hidden-sm hidden-xs btn-group">
                <a target="_blank" href="{:U('son_exec',array('type'=>'see','id'=>$vo['id'],'mid'=>$mid))}"
                   class="btn btn-xs btn-success" title="查看">
                    <i class="icon-eye-open bigger-120"></i>
                </a>

                {if condition='$vo["edit_status"] eq 1'}
                <a target="_self" href="{:U('son_exec',array('id'=>$vo['id'],'type'=>'edit','mid'=>$mid))}" class="btn btn-xs btn-info"
                   title="编辑">
                    <i class="icon-edit bigger-120"></i>
                </a>
                {/if}
                {if condition='$vo["del_status"] eq 1'}
                <a href="javascript:" data-id="{$vo.id|default=''}" class="btn btn-xs btn-danger del_btn" title="删除">
                    <i class="icon-trash bigger-120"></i>
                </a>
                {/if}
            </div>
        </td>
    </tr>
    {/if}
    {/volist}
    </tbody>
</table>

<div class="page">
    {$pages|default=''}
</div>