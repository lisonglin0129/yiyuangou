<table id="sample-table-1" class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
        <th class="center">
            <label>
                <input type="checkbox" class="ace"/>
                <span class="lbl"></span>
            </label>
        </th>
        <th>所属平台</th>
        <th>引导类型</th>
        <th>图片URL</th>
        <th>排序号</th>
        <th>跳转URL</th>
        <th>操作</th>
    </tr>
    </thead>
    <tbody>
    {volist name='guide_list' id='vo'}
    {if condition='!empty($vo["id"])'}
    <tr>
        <td class="center">

            <label>
                <input type="checkbox" class="ace"/>
                <span class="lbl"></span>
            </label>
        </td>
        <td>{$vo.plat|default=''}</td>
        <td>
            {notempty name='vo.type'}
            {switch name='vo.type'}
            {case value='first'}首次安装{/case}
            {case value='index'}非首次安装{/case}
            {default/}
            {/switch}
            {/notempty}
        </td>
        <td>{$vo.img_path|default='--'}</td>
        <td>{$vo.order|default='--'}</td>
        <td>{$vo.url|default='--'}</td>
        <td>
            <div class="visible-md visible-lg hidden-sm hidden-xs btn-group">
                <a target="_blank" href="{:U('guide_exec',array('type'=>'see','id'=>$vo['id']))}"
                   class="btn btn-xs btn-success" title="查看">
                    <i class="icon-eye-open bigger-120"></i>
                </a>
                <a target="_blank" href="{:U('guide_exec',array('id'=>$vo['id'],'type'=>'edit'))}" class="btn btn-xs btn-info"
                   title="编辑">
                    <i class="icon-edit bigger-120"></i>
                </a>
                <a href="javascript:" data-id="{$vo.id|default=''}" class="btn btn-xs btn-danger del_btn" title="删除">
                    <i class="icon-trash bigger-120"></i>
                </a>

            </div>
            <div class="visible-xs visible-sm hidden-md hidden-lg">
                <div class="inline position-relative">
                    <button class="btn btn-minier btn-primary dropdown-toggle"
                            data-toggle="dropdown">
                        <i class="icon-cog icon-only bigger-110"></i>
                    </button>

                    <ul class="dropdown-menu dropdown-only-icon dropdown-yellow pull-right dropdown-caret dropdown-close">
                        <li>
                            <a href="javascript:" class="tooltip-info" data-rel="tooltip" title="View">
														<span class="blue">
															<i class="icon-zoom-in bigger-120"></i>
														</span>
                            </a>
                        </li>

                        <li>
                            <a href="javascript:" class="tooltip-success" data-rel="tooltip" title="Edit">
														<span class="green">
															<i class="icon-edit bigger-120"></i>
														</span>
                            </a>
                        </li>

                        <li>
                            <a href="javascript:" class="tooltip-error" data-rel="tooltip" title="Delete">
													    <span class="red">
													    	<i class="icon-trash bigger-120"></i>
													    </span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </td>
    </tr>
    {/if}
    {/volist}
    </tbody>
</table>

<div class="page">
    {$pages|default=''}
</div>
