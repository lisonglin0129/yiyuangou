{extend name="base/base" /}
{block name="css"}
{css href="__common__/admin/css/goods/form.css" /}
{/block}
{block name="content"}
<div class="page-content">
    <div class="page-header">
        <h1>
            文本消息管理
            <small>
                <i class="icon-double-angle-right"></i>
                {notempty name='type'}
                {switch name='type'}
                {case value='add'}添加{/case}
                {case value='edit'}编辑{/case}
                {default /}查看
                {/switch}
                {/notempty}
            </small>
        </h1>
    </div><!-- /.page-header -->

    <div class="row">
        <div class="col-xs-12">
            <!-- PAGE CONTENT BEGINS -->
            <form class="form-horizontal" role="form" id="form_content">

                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right">关键字</label>
                    <div class="col-sm-6">
                        <input type="text" placeholder="关键字" class="col-xs-10 col-sm-5" name="keyword"
                               {switch name='type'}
                               {case value='add'}{/case}
                        {case value='edit|see'}value="{$info.keyword|default=""}{/case}
                        {default /}
                        {/switch} "/>
                    </div>
                </div>
                <div class="space-4"></div>


                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right">内容</label>
                    <div class="col-sm-6">
                        <textarea class="col-xs-10 col-sm-5" name="content" rows="10">{switch name='type'}
                               {case value='add'}{/case}
                        {case value='edit|see'}{$info.content|default=""}{/case}
                        {default /}
                        {/switch} </textarea>
                    </div>
                </div>
                <div class="space-4"></div>

                <!--操作按钮-->
                <div class="clearfix form-actions">
                    <div class="col-md-offset-3 col-md-9">
                        {notempty name='type'}
                        {switch name='type'}
                        {case value='add'}
                        <button class="btn btn-info submit_btn" type="button">
                            <i class="icon-ok bigger-110"></i>
                            提交表单
                        </button>
                        &nbsp; &nbsp; &nbsp;
                        <button class="btn" type="reset">
                            <i class="icon-undo bigger-110"></i>
                            重置
                        </button>
                        &nbsp; &nbsp; &nbsp;
                        <button class="btn btn-default close_page" type="button">
                            <i class="fa fa-times bigger-110"></i>
                            关闭页面
                        </button>
                        {/case}
                        {case value='edit'}
                        <button class="btn btn-info submit_btn" type="button">
                            <i class="icon-ok bigger-110"></i>
                            保存内容
                        </button>
                        <button class="btn btn-default close_page" type="button">
                            <i class="fa fa-times bigger-110"></i>
                            关闭页面
                        </button>
                        {/case}
                        {default /}
                        {/switch}
                        {/notempty}
                    </div>
                </div>
                <input type="hidden" name="id" value="{$info.id|default=''}">
                <input type="hidden" name="type" id="m_type" value="1">
            </form>
        </div><!-- /.row -->
    </div><!-- /.page-content -->
</div>

<input type="hidden" id="submit_url" value="{:U('text_update')}">
<input type="hidden" id="root_url" value="{:U('index')}">
<input type="hidden" id="valid_url" value="{:U('valid')}">
<input type="hidden" id="type" value="{$type|default='add'}">
<input type="hidden" id="key" value="{$info.keyword|default=''}">
{/block}
{block name="js"}
{js href='__common__/admin/js/message/form.js' /}
{/block}